    "service": "php-apache",
    "workspaceFolder": "/var/www/html",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-python.python",
        "bmewburn.vscode-intelephense-client",
        "ecmel.vscode-html-css",
