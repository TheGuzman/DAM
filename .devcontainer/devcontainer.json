{
    "name": "DAW/DAM DEV",
    "dockerComposeFile": "docker-compose.yml",
    "service": "php-apache",
    "workspaceFolder": "/var/www/html",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-python.python",
        "bmewburn.vscode-intelephense-client",
        "ecmel.vscode-html-css",
        "vscjava.vscode-java-pack",
        "xabikos.JavaScriptSnippets"
    ],
    "postStartCommand": "/bin/bash -c 'if [ ! -d /var/www/html/.git ]; then git clone https://github.com/caspero94/DAW.git /var/www/html; else cd /var/www/html && git pull --rebase origin main; fi'",
    "remoteUser": "root",
    "shutdownAction": "stopCompose"
}
